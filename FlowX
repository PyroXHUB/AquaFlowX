-- Close button settings
closeButton.Name = "CloseButton"
closeButton.Parent = loadingScreen
closeButton.Text = "X"
closeButton.Size = UDim2.new(0, 40, 0, 40)
closeButton.Position = UDim2.new(1, -45, 0, 5)
closeButton.Font = Enum.Font.Cartoon
closeButton.TextSize = 30
closeButton.TextColor3 = Color3.new(1, 0, 0)
closeButton.TextStrokeTransparency = 0
closeButton.TextStrokeColor3 = Color3.new(0, 0, 0)
closeButton.BackgroundColor3 = Color3.new(0, 0, 0)
closeButton.BorderSizePixel = 0

-- Draggable functionality
local UIS = game:GetService("UserInputService")
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    loadingScreen.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

loadingScreen.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = loadingScreen.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

loadingScreen.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- Close button functionality
closeButton.MouseButton1Click:Connect(function()
    loadingScreen:Destroy()
end)
