loadingScreen.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black background
loadingScreen.BackgroundTransparency = 0 -- Fully opaque to show gradient
loadingScreen.Size = UDim2.new(0.4, 0, 0.4, 0) -- Adjusted size for mobile compatibility
loadingScreen.Position = UDim2.new(0.3, 0, 0.3, 0)

local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 0, 0)), 
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 128, 255)) -- Black to ocean blue
}
gradient.Parent = loadingScreen

